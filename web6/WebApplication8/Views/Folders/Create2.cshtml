@model WebApplication8.Models.FolderViewModel

@{
    ViewBag.Title = "Create new folder";
}

<ol class="breadcrumb breadcrumb-top">
    <li><a href="#">Root</a></li>
    <li><a href="#">Folder 1</a></li>
    <li class="active">Create new folder</li>
</ol>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h2>Create new folder</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create2" asp-route-id="@Model.FolderId">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-default" asp-action="Details" asp-route-id="@Model.FolderId">Cancel</a>
            </div>
        </form>
    </div>
</div>